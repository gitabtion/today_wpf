             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:today_wpf.custom"
             mc:Ignorable="d" Height="297.848" Width="702.898">
    <Grid>
        <Image HorizontalAlignment="Left" Height="181" Margin="512,43,0,0" VerticalAlignment="Top" Width="181" Source="/today-wpf;component/resource/head.jpg" RenderTransformOrigin="0.49,0.63">
