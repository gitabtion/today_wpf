<UserControl x:Class="today_wpf.pages.CommentPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:today_wpf.pages"
             mc:Ignorable="d" 
             Height="300" Width="900">
    <Grid Margin="0,0,0.2,0">
        <ListView x:Name="lv_comment" Height="253" VerticalAlignment="Top" Background="{x:Null}" Margin="0,0,0,0"/>
        <Button x:Name="btn_comment" Content="评论" HorizontalAlignment="Left" Margin="825,250,0,0" VerticalAlignment="Top" Width="65" Height="40" FontSize="16" FontWeight="Normal" RenderTransformOrigin="-0.151,0.515"/>
        <TextBox x:Name="edit_content" HorizontalAlignment="Left" Height="32" Margin="5,253,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="810" FontSize="18"/>
    </Grid>
</UserControl>
